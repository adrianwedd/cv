{
  "name": "cv-system",
  "version": "2.0.0",
  "description": "AI-Enhanced CV System with GitHub activity integration",
  "main": "index.html",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "serve": "npx serve .",
    "validate:json": "node -e \"const fs=require('fs'),path=require('path');const dir='data';fs.readdirSync(dir).filter(f=>f.endsWith('.json')).forEach(f=>{try{JSON.parse(fs.readFileSync(path.join(dir,f),'utf8'));console.log('OK',f)}catch(e){console.error('FAIL',f,e.message);process.exit(1)}})\"",
    "scripts:install": "cd .github/scripts && npm install",
    "scripts:lint": "cd .github/scripts && npm run lint",
    "scripts:test": "cd .github/scripts && npm test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cv",
    "resume",
    "ai",
    "github-actions",
    "automation"
  ],
  "author": "Adrian Wedd <adrian@adrianwedd.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianwedd/cv.git"
  },
  "homepage": "https://adrianwedd.github.io/cv",
  "devDependencies": {
    "serve": "^14.2.0"
  }
}
