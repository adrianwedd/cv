{
  "name": "cv-system-tests",
  "version": "1.0.0",
  "description": "Enterprise testing framework for CV system",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:performance": "jest --testPathPattern=performance",
    "test:dashboard": "jest --testPathPattern=dashboard",
    "test:mobile": "jest --testPathPattern=mobile",
    "lighthouse": "lhci autorun",
    "lint": "eslint **/*.js",
    "format": "prettier --write **/*.js"
  },
  "dependencies": {
    "@axe-core/puppeteer": "^4.10.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.47.2",
    "axe-core": "^4.10.1",
    "cypress": "^13.15.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-puppeteer": "^10.1.1",
    "node-fetch": "^2.7.0",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "playwright": "^1.54.2",
    "prettier": "^3.3.0"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testEnvironment": "jest-environment-puppeteer",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {},
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cross-browser/"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testTimeout": 30000,
    "maxWorkers": 1,
    "bail": 0,
    "verbose": true,
    "detectOpenHandles": true,
    "detectLeaks": false,
    "forceExit": true,
    "resetMocks": true,
    "restoreMocks": true,
    "clearMocks": true
  }
}
