#!/bin/sh
#
# Pre-commit hook for code quality checks
# This script runs before every commit to ensure code quality
#

echo "ğŸ” Running pre-commit quality checks..."

# Navigate to scripts directory
cd .github/scripts

# Run the comprehensive pre-commit hook
node pre-commit-hook.js

# Capture exit code
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ]; then
    echo ""
    echo "âŒ Commit rejected - Quality checks failed"
    echo "ğŸ’¡ Fix the issues above and try again"
    echo "ğŸ’¡ Or run: cd .github/scripts && npm run quality:check"
    exit 1
fi

echo "âœ… All quality checks passed - Commit approved"
exit 0